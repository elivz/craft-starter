{
  "name": "craft-starter",
  "description": "Craft Starter Project",
  "version": "1.0.0",
  "author": {
    "name": "Eli Van Zoeren",
    "email": "eli@elivz.com",
    "url": "https://elivz.com"
  },
  "homepage": "https://elivz.com/",
  "license": "MIT",
  "private": true,
  "browser": "/dist/web/index.php",
  "repository": {
    "type": "git",
    "url": "git@github.com:elivz/CraftStarter.git"
  },
  "scripts": {
    "watch": "NODE_ENV=development webpack-dev-server --config config/webpack.dev.js",
    "build": "NODE_ENV=production webpack --config config/webpack.prod.js --progress --hide-modules",
    "lint-scripts": "eslint --fix 'src/scripts/**/*.js'",
    "lint-styles": "prettier --write 'src/styles/**/*.{css,scss,js}' && stylelint 'src/styles/**/*.{css,scss}' --fix verbose --color",
    "lint": "yarn run lint-styles && yarn run lint-scripts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/scripts/**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "src/styles/**/*.{css,scss}": [
      "stylelint --fix verbose --color",
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "accessible-toggle": "^1.3.0",
    "axios": "^0.18.0",
    "delegated-events": "^1.0.0",
    "lazysizes": "^4.1.4",
    "raf-throttle": "^2.0.3",
    "reframe.js": "^2.2.4",
    "sweet-scroll": "^3.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "autoprefixer": "^9.3.1",
    "babel-loader": "^8.0.4",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.6.0",
    "create-symlink-webpack-plugin": "^1.0.0",
    "css-loader": "^1.0.1",
    "cssnano": "^4.1.7",
    "dotenv": "^6.1.0",
    "eslint": "^5.8.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-prettier": "^3.0.0",
    "file-loader": "^2.0.0",
    "glob-all": "^3.1.0",
    "hard-source-webpack-plugin": "^0.12.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.1.3",
    "ignore-loader": "^0.1.2",
    "imagemin": "^6.0.0",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-optipng": "^6.0.0",
    "imagemin-svgo": "^7.0.0",
    "img-loader": "^3.0.1",
    "lint-staged": "^8.0.0",
    "mini-css-extract-plugin": "^0.4.4",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss": "^7.0.5",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.3.0",
    "prettier": "^1.14.3",
    "purgecss-webpack-plugin": "^1.3.1",
    "purgecss-whitelister": "^2.3.1",
    "resolve-url-loader": "^3.0.0",
    "sane": "^4.0.2",
    "style-loader": "^0.23.1",
    "stylelint": "^9.7.1",
    "stylelint-config-recommended": "^2.1.0",
    "svg-url-loader": "^2.3.2",
    "symlink-webpack-plugin": "^0.0.4",
    "terser-webpack-plugin": "^1.1.0",
    "url-loader": "^1.1.2",
    "vue-loader": "^15.4.2",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.5.17",
    "webapp-webpack-plugin": "^2.3.1",
    "webpack": "^4.24.0",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-cli": "^3.1.2",
    "webpack-dashboard": "^2.0.0",
    "webpack-dev-server": "^3.1.10",
    "webpack-manifest-plugin": "^2.0.4",
    "webpack-merge": "^4.1.4",
    "webpack-notifier": "^1.7.0",
    "workbox-webpack-plugin": "^3.6.3",
    "write-file-webpack-plugin": "^4.4.1"
  },
  "browserslist": {
    "production": [
      "> 0.25% in US",
      "> 2%",
      "IE 11"
    ],
    "legacyBrowsers": [
      "> 0.25% in US",
      "> 2%",
      "IE 11"
    ],
    "modernBrowsers": [
      "last 2 Chrome versions",
      "not Chrome < 60",
      "last 2 Safari versions",
      "not Safari < 10.1",
      "last 2 iOS versions",
      "not iOS < 10.3",
      "last 2 Firefox versions",
      "not Firefox < 54",
      "last 2 Edge versions",
      "not Edge < 15"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "browser": true
    },
    "extends": [
      "airbnb-base",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "import"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "prettier/prettier": "error",
      "no-new": 1
    }
  },
  "stylelint": {
    "extends": "stylelint-config-recommended",
    "rules": {
      "max-nesting-depth": [
        3,
        {
          "ignoreAtRules": [
            "media",
            "supports",
            "include"
          ]
        }
      ],
      "selector-max-compound-selectors": 4,
      "at-rule-no-unknown": null
    }
  }
}
